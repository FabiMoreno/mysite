<script>
//  JS PARA CAMBIO TEMA MENU MOBILE.
//  Este solo tiene la palabra Menu al final para no usar los mismos IDs que el cambio del tema del footer.
  const dropDownButtonMenu = document.getElementById("drop-down-themes-menu");
  const optionThemesMenu = document.getElementById("option-themes-menu");

  dropDownButtonMenu.addEventListener("click", function(event) {
    // Evita que el clic en el botón active el dropdown
    event.stopPropagation();

    // Muestra u oculta optionThemesMenu al hacer clic en el botón
    if (optionThemesMenu.classList.contains("hidden")) {
      optionThemesMenu.classList.remove("hidden");
    } else {
      optionThemesMenu.classList.add("hidden");
    }
  });

  // Agrega un oyente de eventos al documento para cerrar optionThemesMenu al hacer clic fuera del botón
  document.addEventListener("click", function(event) {
    if (event.target !== dropDownButtonMenu) {
      optionThemesMenu.classList.add("hidden");
    }
  });

  // Evita que los clics dentro de optionThemesMenu cierren el dropdown
  optionThemesMenu.addEventListener("click", function(event) {
    event.stopPropagation();
  });

  // Recupera y aplica el tema seleccionado al cargar la página
  document.addEventListener("DOMContentLoaded", function() {
    const selectedTheme = localStorage.getItem("selectedTheme") || "";
    applyTheme(selectedTheme);
  });

  // Función para aplicar el tema seleccionado
  function applyTheme(selectedTheme) {
    const html = document.documentElement;

    if (selectedTheme === "dark") {
      html.setAttribute("data-theme", "dark");
    } else if (selectedTheme === "light") {
      html.setAttribute("data-theme", "light");
    } else {
      html.removeAttribute("data-theme");
    }

    // Guarda la selección en localStorage
    localStorage.setItem("selectedTheme", selectedTheme);

    // Oculta el dropdown de opciones
    optionThemesMenu.classList.add("hidden");

  }

  // Agrego un oyente de eventos para cambiar el tema al hacer clic en una opción
  optionThemesMenu.addEventListener("click", function(event) {
    const selectedTheme = event.target.getAttribute("data-theme") || "";
    applyTheme(selectedTheme);
  });
</script>